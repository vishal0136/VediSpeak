# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
VEDISPEAK_SECRET=your-secret-key-change-me-in-production
PORT=5000

# Database Configuration
MYSQL_HOST=127.0.0.1
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=isl_app

# Upload Configuration
UPLOAD_FOLDER=storage/uploads
MAX_CONTENT_LENGTH=26214400  # 25MB for enhanced audio file support

# ML Model Configuration
MODEL_PATH=checkpoints/best.pth
MODEL_ARCH=efficientnet_b0

# Azure Speech Services Configuration (Recommended for enhanced features)
# Get these from: https://portal.azure.com -> Cognitive Services -> Speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Twilio SMS Configuration (Optional - for OTP via SMS)
TWILIO_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE=your_twilio_phone_number
# TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid  # Optional: Use this instead of TWILIO_PHONE

# SendGrid Email Configuration (Optional - for OTP via Email)
# Note: You need to verify the sender email in SendGrid dashboard
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_verified_email@example.com

# Google OAuth Configuration (Optional - for social login)
# GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
# OAUTHLIB_INSECURE_TRANSPORT=1  # Only for development (allows HTTP)

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
# Set to 'production' for production deployment
ENVIRONMENT=development
